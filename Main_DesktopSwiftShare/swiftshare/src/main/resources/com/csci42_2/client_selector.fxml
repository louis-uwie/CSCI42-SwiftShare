<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.csci42_2.controller.ClientSelectorController"
      alignment="CENTER"
      spacing="20">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="fileLabel" text="No file selected." />
    <Label text="Choose Transfer Type" style="-fx-font-size: 18px;" />
    
    <Button fx:id="lanButton" text="🌐 LAN Transfer" prefWidth="200" />
    <Button fx:id="bluetoothButton" text="📶 Bluetooth Transfer" prefWidth="200" />
    <Button fx:id="backButton" text="⬅ Back" prefWidth="200" />

</VBox>
