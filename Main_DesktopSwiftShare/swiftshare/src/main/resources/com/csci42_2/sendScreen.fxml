<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainVBox" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csci42_2.SendScreenController">
   <children>
      <AnchorPane fx:id="topAnchorPane" xmlns:fx="http://javafx.com/fxml/1">
         <Label text="SwiftShare" AnchorPane.leftAnchor="25" />
         <Button fx:id="settingsButton" text="Settings" AnchorPane.rightAnchor="25" onAction="#SettingsButton" />
      </AnchorPane>

      <GridPane fx:id="gridPane" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1">
         <children>
            <VBox fx:id="centerVBox" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <Label text="Placeholder for Files" textAlignment="LEFT" HBox.hgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            </VBox>
            <VBox fx:id="centerVBox" alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml/1" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <Label text="File Details Placeholder" HBox.hgrow="ALWAYS" />
               <Button fx:id="nextButton" text="Next" onAction="#Next" HBox.hgrow="ALWAYS"/>
            </VBox>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
