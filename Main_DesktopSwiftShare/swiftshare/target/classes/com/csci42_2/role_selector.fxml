<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.csci42_2.controller.RoleSelectController"
      spacing="20"
      alignment="CENTER">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="📁 SwiftShare" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <Button fx:id="sendButton" text="Send a File" prefWidth="150" />
    <Button fx:id="receiveButton" text="Receive a File" prefWidth="150" />

</VBox>
