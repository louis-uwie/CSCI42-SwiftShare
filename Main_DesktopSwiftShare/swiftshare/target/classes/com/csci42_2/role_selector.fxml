<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.csci42_2.controller.RoleSelectorController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="SWIFTSHARE" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label text="Welcome to SwiftShare!" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>

    <Label text="SwiftShare is a cross-platform offline file transfer application designed to enable seamless file sharing between Windows, macOS, Linux, Android, and iOS devices."
           wrapText="true"
           maxWidth="400"
           style="-fx-text-fill: #7f8c8d; -fx-text-alignment: center;"/>

    <HBox spacing="20" alignment="CENTER">

        <Button fx:id="sendButton" text="✈ Send"
                style="-fx-font-size: 16px;
                       -fx-background-color: #3498db;
                       -fx-text-fill: white;
                       -fx-pref-width: 140px;
                       -fx-pref-height: 40px;
                       -fx-background-radius: 20px;
                       -fx-border-radius: 20px;"/>


        <Button fx:id="receiveButton" text="⤓ Receive"
                style="-fx-font-size: 16px;
                       -fx-background-color: transparent;
                       -fx-text-fill: #3498db;
                       -fx-border-color: #3498db;
                       -fx-border-width: 2px;
                       -fx-pref-width: 140px;
                       -fx-pref-height: 40px;
                       -fx-background-radius: 20px;
                       -fx-border-radius: 20px;"/>
    </HBox>

</VBox>