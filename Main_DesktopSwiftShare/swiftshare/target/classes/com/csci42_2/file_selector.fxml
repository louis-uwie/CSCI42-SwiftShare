<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.csci42_2.controller.FileSelectorController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="ðŸ“ Choose a File to Send"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label fx:id="fileLabel"
           text="No file selected"
           wrapText="true"
           maxWidth="350"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>

    <Button fx:id="browseButton" text="ðŸ” Browse"
            style="-fx-font-size: 16px;
                   -fx-background-color: #3498db;
                   -fx-text-fill: white;
                   -fx-pref-width: 250px;
                   -fx-pref-height: 40px;
                   -fx-background-radius: 20px;
                   -fx-border-radius: 20px;"/>

    <Button fx:id="nextButton" text="âž” Next"
