<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.csci42_2.controller.LANClientController"
      spacing="20"
      alignment="CENTER"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <Label text="📡 File Share - Sender"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Button fx:id="scanButton" text="🔍 Scan for Devices"
            style="-fx-font-size: 16px;
                   -fx-background-color: #3498db;
                   -fx-text-fill: white;
                   -fx-pref-width: 250px;
                   -fx-pref-height: 40px;
                   -fx-background-radius: 20px;
                   -fx-border-radius: 20px;"/>

    <ListView fx:id="deviceListView"
              style="-fx-background-radius: 10px;
                     -fx-border-radius: 10px;
                     -fx-border-color: #bdc3c7;
                     -fx-border-width: 1px;"
              prefHeight="200"
              prefWidth="350"/>

    <Label fx:id="fileInfoLabel"
           text="No file selected"
           style="-fx-text-fill: #7f8c8d; -fx-font-size: 14px;"/>

    <Button fx:id="connectButton" text="🔗 Connect to Selected"
            style="-fx-font-size: 16px;
                   -fx-background-color: #2ecc71;
                   -fx-text-fill: white;
                   -fx-pref-width: 250px;
                   -fx-pref-height: 40px;
                   -fx-background-radius: 20px;
                   -fx-border-radius: 20px;"
            disable="true"/>

    <Button fx:id="cancelButton" text="❌ Cancel"
            style="-fx-font-size: 16px;
                   -fx-background-color: #e74c3c;
                   -fx-text-fill: white;
                   -fx-pref-width: 250px;
                   -fx-pref-height: 40px;
                   -fx-background-radius: 20px;
                   -fx-border-radius: 20px;"/>

    <Button fx:id="backButton" text="⬅ Back"
            style="-fx-font-size: 16px;
                   -fx-background-color: transparent;
                   -fx-text-fill: #3498db;
                   -fx-border-color: #3498db;
                   -fx-border-width: 2px;
                   -fx-pref-width: 250px;
                   -fx-pref-height: 40px;
                   -fx-background-radius: 20px;
                   -fx-border-radius: 20px;"/>

</VBox>