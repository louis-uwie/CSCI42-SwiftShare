<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FileSender">

    <TextView
        android:id="@+id/filePreview"
        android:layout_width="438dp"
        android:layout_height="153dp"
        android:background="#DDDDDD"
        android:padding="8dp"
        android:text="Preview: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/deviceRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/filePreview"
        app:layout_constraintBottom_toTopOf="@id/SendFileBTN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/SendFileBTN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send File via Bluetooth"
        app:layout_constraintTop_toBottomOf="@id/deviceRecyclerView"
        app:layout_constraintBottom_toTopOf="@id/SendFileLanBTN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/SendFileLanBTN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Send File via LAN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SendFileBTN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
